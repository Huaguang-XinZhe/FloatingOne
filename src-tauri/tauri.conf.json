{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "FloatOne",
  "version": "0.5.8",
  "identifier": "cn.mufengapp.floatone",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "悬一句",
        "width": 1080,
        "height": 12,
        "decorations": false,
        "resizable": false,
        "shadow": false,
        "transparent": true,
        "skipTaskbar": true,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
